volumes:
  nextcloud:
    external: true
networks:
  web:
    external: true

services:
  app:
    labels:
      - traefik.enable=true
      - traefik.http.routers.nextcloud.rule=Host(`$HOST`)
      - traefik.http.routers.nextcloud.entrypoints=web
    image: nextcloud
    restart: unless-stopped
    volumes:
      - nextcloud:/var/www/html
    environment:
      NEXTCLOUD_TRUSTED_DOMAINS: $HOST
      MYSQL_PASSWORD: $PWD
      MYSQL_DATABASE: $DATABASE
      MYSQL_USER: $USER
      MYSQL_HOST: maria_nextcloud
      config_is_read_only: false
      TZ: Europe/Paris
    networks:
      - web
    ports:
      - 9080:80